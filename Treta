using System;

namespace TretaZadachka
{
    class Program
    {
        static void Main(string[] args)
        {
            int sum = 0;
            int i = 0;

            Console.Write("Input a number: ");
            int n = int.Parse(Console.ReadLine());

            while (n > 0)
            {
                sum = sum + n;
                i++;
                Console.Write("Input a number: ");
                n = int.Parse(Console.ReadLine());
            }

            Console.WriteLine("The sum is: {0} \nThe number of inputed numbers is: {1}", sum, i);
            Console.ReadLine();
        }
    }
}
